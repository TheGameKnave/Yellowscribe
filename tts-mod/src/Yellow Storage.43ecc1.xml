<!--
    PLEASE NOTE:
        there is no use of Defaults and classes here to enable easier backwards compatibility and
        compatibility with other global UI. I hate the verbiosity just as much as the next person
-->
<Panel id="ym-container" visibility="hidden" group-id="">
    <VerticalLayout childForceExpandHeight="false" childAlignment="TopLeft" id="dataCard" height="700" width="1200" color="#222222" allowDragging="true" returnToOriginalPositionWhenReleased="false">
        <Panel preferredHeight="40" childForceExpandWidth="false" color="#222222">
            <Text id="data-groupName" fontStyle="Bold" fontSize="26" color="#fafafa" alignment="MiddleCenter" />
            <Panel rectAlignment="UpperRight" height="30" width="30">
                <Button transition="None" preferredHeight="24" preferredWidth="24" padding="3 3 3 3" resizeTextForBestFit="true" textAlignment="MiddleCenter" height="30" width="30" color="#ffaa00" textColor="#fafafa" id="dataCardCloseButton">X</Button>
            </Panel>
        </Panel>
        <VerticalLayout color="#222222">
            <VerticalScrollView color="#222222" flexibleHeight="1" childForceExpandHeight="false" scrollSensitivity="40">
                <VerticalLayout padding="10" horizontalOverflow="Wrap" spacing="30" id="dataCardContentContainer" childForceExpandHeight="false" />
            </VerticalScrollView>
        </VerticalLayout>
        <HorizontalLayout childForceExpandWidth="false" childForceExpandHeight="false" childAlignment="MiddleLeft" color="#ffffff00" spacing="3" padding="7 0 0 0" preferredHeight="27" id="highlightButtonsContainer" />
    </VerticalLayout>
</Panel>